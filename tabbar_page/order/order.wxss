.main {
  width: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  background-color: #f2f2f2;
  height: 100vh;
  padding: 20px;
}

.main .top {
  display: flex;
  justify-content: space-between;
}

.main .top .top_item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 5px 10px;
  width: 120px;
  height: 32px;
  background-color: white;
  font-size: 14px;
  color: #415058;
}

.main .top .top_item .icon-xiangyou1 {
  transform: rotate(90deg);
}

.main .content {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.main .content .content_title {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  margin: 15px 0;
}

.main .content .content_title .content_title_center {
  display: flex;
  flex-direction: column;
}

.main .content .content_title .content_title_center .content_title_center_c1 {
  display: flex;
}

.main .content .content_title .content_title_center .content_title_center_c1 .content_title_center_c1_all {
  color: #BD3124;
}

.main .content .content_title .content_title_center .content_title_center_c2 {
  color: #9A9A9A;
}

.main .content .content_item {
  width: 100%;
  height: 100px;
  background-color: white;
  border-radius: 5px;
  display: flex;
  justify-content: space-between;
  margin-bottom: 20px;
}

.main .content .content_item .content_item_left {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.main .content .content_item .content_item_left .icon-loading {
  width: 80px;
  height: 80px;
  font-size: 80px;
  color: #1afa29;
}

.main .content .content_item .content_item_left .content_item_left_time {
  font-size: 14px;
}

.main .content .content_item .content_item_center {
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  font-size: 14px;
}

.main .content .content_item .content_item_center .content_item_center_item {
  display: flex;
}

.main .content .content_item .content_item_center .content_item_center_item .iconfont {
  margin-right: 5px;
}

.main .content .content_item .content_item_center .content_item_center_item view:nth-child(2) {
  margin-right: 10px;
}

.main .content .content_item .content_item_center .content_item_center_item .username {
  border-left: 2px solid #005826;
  padding-left: 10px;
}

.main .content .content_item .content_item_right {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.main .content .content_item .content_item_right .iconfont {
  font-size: 24px;
  color: #9A9A9A;
}

.main .content .content_item .content_item_right .shandian {
  position: absolute;
  right: 0;
  bottom: 0;
  color: rgba(189, 49, 36, 0.44);
}

.main .content .content_bottom {
  font-size: 12px;
  color: #9A9A9A;
}

.main .funButton {
  display: flex;
  padding: 40px;
  justify-content: space-between;
}

.main .funButton view {
  font-size: 16px;
  color: white;
  border-radius: 30px;
  width: 110px;
  height: 48px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.main .funButton view:nth-child(1) {
  background-color: #BD3124;
}

.main .funButton view:nth-child(2) {
  background-color: #005826;
}
