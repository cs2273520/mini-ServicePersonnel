.top {
  width: 100%;
  display: flex;
  max-height: 181.159rpx;
  align-items: center;
  justify-content: space-between;
  height: 181.159rpx;
  background-color: #f2f2f2;
  padding: 0 19.231rpx;
  box-sizing: border-box;
}

.top .headPicture image {
  width: 144.928rpx;
  height: 144.928rpx;
}

.top .userInfo {
  display: flex;
  flex-direction: column;
  overflow: hidden;
  height: 100%;
}

.top .userInfo .name {
  margin-top: 18.116rpx;
  font-size: 39.855rpx;
  margin-bottom: 18.116rpx;
}

.top .userInfo .intro {
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  font-size: 25.362rpx;
}

.top .userInfo .intro .intro1 {
  display: flex;
  width: 100%;
  justify-content: space-between;
}

.top .userInfo .intro .intro1 .toUp {
  color: #005826;
  text-decoration: underline;
}

.top .userInfo .intro image {
  width: 36.232rpx;
  height: 36.232rpx;
  margin-right: 9.058rpx;
}

.top .settlement {
  display: flex;
  height: 100%;
  width: 90.58rpx;
  box-sizing: border-box;
  justify-content: flex-end;
  padding-top: 19.231rpx;
}

.top .settlement .iconfont {
  font-size: 46.154rpx;
}

.top .withdrawCash {
  display: flex;
  flex-direction: column;
  width: 120px;
  justify-content: center;
  align-items: center;
}

.top .withdrawCash .money {
  font-size: 28px;
  color: #E99D42;
}

.top .withdrawCash .getmoney {
  width: 112px;
  height: 30px;
  color: white;
  background-color: #005826;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  border-radius: 20px;
}
